{{#> layout.html}}
  {{#*inline "title"}}
    Update profile
  {{/inline}}
  {{#*inline "content"}}

    <h1>Settings</h1>

    <h2>Display name</h2>

    <form method="post" action="update-display-name" enctype="multipart/form-data" class="normalize-multipart">
      <fieldset role="group">
        <input type="text" name="display_name" placeholder="{{active_user.name}}" autocomplete="off" required />
        <input type="submit" value="Update" />
      </fieldset>
    </form>

  {{/inline}}
{{/layout.html}}
