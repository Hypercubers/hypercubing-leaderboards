        <form method="post" action="update-profile" enctype="multipart/form-data" class="normalize-multipart">
          <fieldset role="group">
            <input type="hidden" name="user_id" value="{{target_user.id}}" />
            <input type="text" id="display_name" name="display_name" value="{{target_user.name}}" />
            <button type="button" class="cancel-edit pico-background-red-500" value="Cancel">Cancel</button>
            <input type="submit" class="pico-background-green-600" value="Confirm">
          </fieldset>
        </form>
      </span>
    </h1>

    {{#if active_user.moderator}}
      <article>
        <span class="iconify" data-icon="mdi:security"></span>
        <a href="solver-submissions?id={{target_user.id}}">Submissions from this user</a>
      </article>
    {{/if}}

    {{> solve-table.html endpoint='solve-table/user?' filters=true}}

  {{/inline}}
{{/layouts/base.html}}
