  {{/inline}}
  {{#*inline "content"}}

    <h1 class="editable-data">
      <span class="display-data">
        {{target_user.name}}
        {{#if can_edit}}
        <button class="edit-button"><span class="iconify" data-icon="mdi:pencil"></span></button>
        {{/if}}
      </span>
