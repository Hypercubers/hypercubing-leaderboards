          </td>
          <td>{{this.id}}</td>
          <td>{{this.name}}</td>
          <td><input type="checkbox" {{#if this.primary_filters}}checked{{/if}} disabled>Allow filters</input></td>
          <td><input type="checkbox" {{#if this.primary_macros}}checked{{/if}} disabled>Allow macros</input></td>
        </tr>
      {{/each}}
    </table>

  {{/inline}}
{{/layouts/base.html}}
